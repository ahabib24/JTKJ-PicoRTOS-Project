{
  "cmake.showSystemKits": false,
  "cmake.options.statusBarVisibility": "visible",
  "cmake.options.advanced": {
    "build": { "statusBarVisibility": "visible" },
    "launch": { "statusBarVisibility": "hidden" },
    "debug": { "statusBarVisibility": "hidden" }
  },
  "cmake.configureOnEdit": true,
  "cmake.automaticReconfigure": true,
  "cmake.configureOnOpen": true,

  "cmake.generator": "Ninja",
  "cmake.cmakePath": "${userHome}/.pico-sdk/cmake/v3.31.5/bin/cmake",
  "cmake.configureArgs": [
    "-DCMAKE_MAKE_PROGRAM:FILEPATH=${userHome}/.pico-sdk/ninja/v1.12.1/ninja"
  ],

  "cmake.cCompiler": "/opt/homebrew/bin/arm-none-eabi-gcc",
  "cmake.cppCompiler": "/opt/homebrew/bin/arm-none-eabi-g++",

  "cmake.configureSettings": {
    "PICO_BOARD": "pico_w"
  },
  "cmake.configureEnvironment": {
    "FREERTOS_KERNEL_PATH": "${env:HOME}/.freertos"
  },

  "terminal.integrated.env.osx": {
    "FREERTOS_KERNEL_PATH": "${env:HOME}/.freertos",
    "PICO_SDK_PATH": "${env:HOME}/.pico-sdk/sdk/2.2.0",
    "PICO_TOOLCHAIN_PATH": "${env:HOME}/.pico-sdk/toolchain/14_2_Rel1",
    "PATH": "${env:HOME}/.pico-sdk/toolchain/14_2_Rel1/bin:${env:HOME}/.pico-sdk/picotool/2.2.0/picotool:${env:HOME}/.pico-sdk/cmake/v3.31.5/bin:${env:HOME}/.pico-sdk/ninja/v1.12.1:${env:PATH}"
  },

  "C_Cpp.debugShortcut": false,
  "raspberry-pi-pico.cmakeAutoConfigure": false,
  "raspberry-pi-pico.useCmakeTools": true,
  "raspberry-pi-pico.cmakePath": "${HOME}/.pico-sdk/cmake/v3.31.5/bin/cmake",
  "raspberry-pi-pico.ninjaPath": "${HOME}/.pico-sdk/ninja/v1.12.1/ninja",

  "files.associations": {
    "stdlib.h": "c",
    "stdio.h": "c",
    "ssd1306.h": "c",
    "tusb.h": "c",
    "binary_info.h": "c",
    "sdk.h": "c",
    "printf.h": "c",
    "padsbank0.h": "c",
    "gpio.h": "c",
    "compare": "c",
    "cstdint": "c",
    "string.h": "c",
    "cstdio": "c",
    "freertos.h": "c",
    "pdm_microphone.h": "c",
    "pins.h": "c"
  }
}
